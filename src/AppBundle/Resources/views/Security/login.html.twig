{% extends 'AppBundle::base.html.twig' %}

{% block title parent() ~ ' - Sign In' %}

{% block body %}
    <body class="gray-bg">
        <div class="middle-box text-center loginscreen animated fadeInDown">
            <div>
                <h3>Sign In</h3>
                <form class="m-t" action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" name="_username" value="{{ last_username }}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="Password" name="_password" />
                    </div>
                    {% if error %}
                        <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                    <button type="submit" class="btn btn-primary block full-width m-b">Sign in</button>
                </form>
                <p>New to T Time? <a href="{{ path('signup') }}">Create an account</a></p>
            </div>
        </div>
    </body>
{% endblock %}
